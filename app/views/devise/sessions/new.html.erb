<div class="container">
  <div class="wrapper col-md-4 col-md-offset-4 col-sm-10">

    <h2>Log in</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field form-group">
        <%= f.email_field :email, class: "form-control", placeholder: "メールアドレス", autofocus: true %>
      </div>
    
      <div class="field form-group">
        <%= f.password_field :password, class: "form-control", placeholder: "パスワード", autocomplete: "off" %>
      </div>
    
      <% if devise_mapping.rememberable? -%>
        <div class="field form-group">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end -%>
    
      <div class="actions">
        <%= f.submit "Log in", class: "btn btn-primary btn-block" %>
      </div>
    <% end %>
    
    <%= render "devise/shared/links" %>

  </div>
</div>
